<?xml version="1.0"?>
<configuration>
  <!-- http://joe.blog.freemansoft.com -->
  <!-- ************************************************************************************* -->
  <!-- log4net configuration so we don't have to have separate file -->
  <!-- ************************************************************************************* -->
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="example.log" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="2" />

      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level %thread %logger - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="Console" />
      <appender-ref ref="RollingFile" />
    </root>
  </log4net>

  <appSettings>
    <!-- ************************************************************************************* -->
    <!-- TFS connection and filtering  -->
    <!-- ************************************************************************************* -->
    <!-- -->
    <add key="Tfs.Url"      value="https://tfs.yourdomain.net/tfs/yourcollection" />
    <add key="Tfs.Username" value="userid" />
    <add key="Tfs.Password" value="password" />
    <add key="Tfs.Domain"   value="your_ad_domain" />
    <!-- -->

    <!-- 
      the number of projects cannot exceed the number of lamps in the device
      the pattern may be case insensitive 
    -->
    <add key="Tfs.TeamProjectName1" value="MSI" />
    <add key="Tfs.BuildDefinitionNamePattern1" value="CI_vNext*" />
	  <!--
    <add key="Tfs.TeamProjectName2" value="MSI" />
    <add key="Tfs.BuildDefinitionNamePattern2" value="V_vNext*" />
    <add key="Tfs.TeamProjectName3" value="MSI" />
    <add key="Tfs.BuildDefinitionNamePattern3" value="P_Main*" />
    <add key="Tfs.TeamProjectName4" value="MSI" />
    <add key="Tfs.BuildDefinitionNamePattern4" value="V_RC*" />
    -->

    <add key="PollPauseInMilliseconds" value="30000" />
    <add key="ExceptionPauseInMilliseconds" value="500" />

    <!-- ************************************************************************************* -->
    <!-- device selection and communication configuration -->
    <!-- ************************************************************************************* -->
    <!-- 
      Note: Sparkfun bluesmirf bluetooth devices create two com ports when bound.  The first one is the outbound 
      test rig has arduino on COM7 and Freemometer on COM2 at home CheapLaunchpadMSP430 on COM?
      prod has lunch pail is COM5 at work
      CheapLaunchpadMSP430 actual speed is 9600 but Serial over USB masks that on my PC
      -->
    <add key="Device.Serial.ComPort" value="COM13" />
    <add key="Device.Serial.DataRate" value="19200" />
    
    <!-- 
      I wish we had DI - valid devices are "ArduinoDualRGB" and "Freemometer" and "CheapLaunchpadMSP430" 
      -->
    <add key="Device.Class" value="CheapLaunchpadMSP430" />

    <!-- ************************************************************************************* -->
    <!-- device dependent configuration  -->
    <!-- ************************************************************************************* -->
    <!--
      these devices vary from 2-32 lamps
      used to turn off the lamps because the device can't tell you how many it has
      direct USB connected devices reset on connection.  Bluetooth devices do not
      -->
    <add key="Arduino.NumberOfLamps" value="4" />
    <add key="Arduino.ResetOnConnect" value="false" />
    
	  <!-- 
      single lamp device with mechanical ringer
      ringer pattern for build failure types. Set to 0 for silence
      This device rings until build is complete! That can be annoying.
      RingTime is in msec. RingTime should be shorter than the polling interval 
      -->
    <add key="Freemometer.BellPattern.FailureComplete" value="1" />
    <add key="Freemometer.BellPattern.FailurePartial" value="7" />
    <add key="Freemometer.BellPattern.RingTime" value="3000" />

    <!-- 
      single lamp device patterns range from 0..9 - 0 is off and 1 is solid
      -->
    <add key="CheapLaunchpadMSP430.BellPattern.FailureComplete" value="1" />
    <add key="CheapLaunchpadMSP430.BellPattern.FailurePartial" value="7" />

  </appSettings>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
  </startup>

  </configuration>